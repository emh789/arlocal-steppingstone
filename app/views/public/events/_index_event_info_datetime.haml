.arl_events_index_event_datetime
  %a{href: public_event_path(event.id_public), class: :arl_events_index_event_url, title: event.title}
    %span.arl_events_index_date
      = event.datetime_local_formatted(:day_month_date_year) + ', '
    %span.arl_events_index_time
      = event.datetime_local_formatted(:hour12_min_ampm_zone)
