= html_head_subtitle_set 'upload picture'

.arl_admin_resource_header.resource_new
  .arl_admin_resource_header_category
    Picture Upload

.arl_admin_picture_edit
  = form_with(model: [:admin, @picture], local: true, url: admin_picture_create_from_upload_path, class: :arl_form) do |f|
    .arl_form_data
      = render 'form_elements/file_field', attribute: :source_uploaded, form: f
      = render 'form_elements/auto_keyword', attribute: :picture_keywords, form: f
    .arl_form_actions
      = f.submit class: :arl_button_form_submit
