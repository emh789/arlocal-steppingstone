= form_with(model: [:admin, audio], url: admin_audio_refresh_id3_path(audio, pane: :id3), local: true, class: :arl_form) do |f|
  .arl_form_title
    Audio ID3

  %ul.arl_form_explanation
    %li.arl_form_explanation_caveat Press "Update Auto" to replace the metadata in the database using those from the audio recording file.
  %ul.arl_form_explanation
    %li.arl_form_explanation_warning This cannot be undone.

  .arl_form_data
    .arl_form_explanation
      .arl_form_explanation_caveat Currently in database
    .arl_form_data_attr
      .arl_form_data_attr_label Title
      .arl_form_data_attr_value= audio.title_and_subtitle_for_display
    .arl_form_data_attr
      .arl_form_data_attr_label Artist
      .arl_form_data_attr_value= audio.artist
    .arl_form_data_attr
      .arl_form_data_attr_label Date
      .arl_form_data_attr_value= audio.year
    .arl_form_data_attr
      .arl_form_data_attr_label Duration
      .arl_form_data_attr_value= audio.duration

  .arl_form_data
    .arl_form_explanation
      .arl_form_explanation_caveat Stored from audio recording file
    - audio_read_source_metadata(audio).each_pair do |key, value|
      .arl_form_data_attr
        .arl_form_data_attr_label= "#{key}"
        .arl_form_data_attr_value= "#{value}"

  .arl_form_actions
    = f.submit class: :arl_button_form_submit
