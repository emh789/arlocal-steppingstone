= content_for :page_subtitle, 'ISRC data'

.arl_admin_resource_header.resource_show
  .arl_admin_resource_header_category
    Audio and Video
  .arl_admin_resource_header_title
    ISRC data
  .arl_admin_resource_header_buttons
    = isrc_admin_button_to_edit(filter: params[:filter])

.arl_admin_isrc_index
  .arl_admin_isrc_index_filter
    = form_with model: @arlocal_settings, url: admin_arlocal_settings_update_and_return_path, local: true do |f|
      = isrc_admin_filter_select(f, params)
      = f.submit icon_pin, class: :arl_button_form_aux_submit

  %table.arl_admin_isrc_index_isrcs
    - @resources.each do |resource|
      %tr.arl_admin_isrc_index_isrcs_item
        %td.arl_admin_isrc_index_isrcs_item_class= resource.class
        %td.arl_admin_isrc_index_isrcs_item_title= resource_isrcable_admin_link(resource)
        %td.arl_admin_isrc_index_isrcs_item_isrc= resource.isrc
