= html_head_subtitle_set "editing '#{@infopage.title}'"

.arl_admin_resource_header.resource_edit
  .arl_admin_resource_header_category
    Editing Info Page
  .arl_admin_resource_header_title
    = @infopage.title
  .arl_admin_resource_header_buttons
    = infopage_admin_button_to_edit_previous(@infopage_neighbors.previous, arlocal_settings: @arlocal_settings, current_pane: @form_metadata.current_pane)
    = infopage_admin_button_to_done_editing(@infopage)
    = infopage_admin_button_to_public(@infopage)
    = infopage_admin_button_to_edit_next(@infopage_neighbors.next, arlocal_settings: @arlocal_settings, current_pane: @form_metadata.current_pane)
  = render '/form_elements/errors', resource: @infopage

%nav.arl_admin_resource_edit_nav
  - @form_metadata.navbar_categories.each do |category|
    = infopage_admin_edit_nav_button(infopage: @infopage, category: category, current_pane: @form_metadata.current_pane)

.arl_admin_infopage_edit
  = render @form_metadata.partial_name, infopage: @infopage, selectable: @form_metadata.selectables
