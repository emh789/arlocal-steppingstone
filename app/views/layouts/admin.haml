<!DOCTYPE html>
<html lang='en'>

%head
  = html_head_title_admin(yield(:html_head_title_subtitle))
  = html_head_meta_charset_tag
  = html_head_meta_viewport_tags

  = favicon_link_tag(app_favicon_filepath, rel: 'icon')
  = favicon_link_tag(app_favicon_filepath, rel: 'apple-touch-icon')
  = yield(:html_head_meta_description)

  = javascript_include_tag('application')
  = javascript_include_tag('admin')
  = stylesheet_link_tag('application')
  = csrf_meta_tags

%body
  .arlocal_admin
    = render 'layouts/header_admin'
    = render 'layouts/content'
    = render 'layouts/footer'

  %script
    $(document).on('ready', Arlocal.FrontEnd._onReady.initialize());

</html>
