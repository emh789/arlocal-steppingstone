%fieldset.arl_form_data_attr
  - if local_assigns[:label]
    = form.label attribute, label, class: :arl_form_data_attr_label
  - else
    = form.label attribute, class: :arl_form_data_attr_label

  - if local_assigns[:errors]
    %mark.arl_form_data_attr_errors
      - errors.each do |e|
        .arl_form_data_attr_error= e

  = form.collection_select attribute, collection, :id, text_method, { include_blank: local_assigns[:blank], selected: form.object.public_send(attribute) }, { class: :arl_form_data_attr_input_select }
  - if local_assigns[:aside]
    %aside.arl_form_data_attr_explanation= "#{aside}"
