.arl_form_data_attr
  = form.label attribute, class: :arl_form_data_attr_label
  = form.check_box attribute, class: :arl_form_data_attr_input_checkbox
  = form.label attribute, '&nbsp;'.html_safe, class: :arl_form_data_attr_input_checkbox_visible, tabindex: 0
  - if local_assigns[:aside]
    %aside.arl_form_data_attr_explanation= "#{aside}"
  - if local_assigns[:not_yet_implemented] == true
    .not_yet_implemented
